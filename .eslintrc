{
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "styleguide-recommended",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {},
  "plugins": [
    "import",
    "flowtype"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "env": {
    "node": true,
    "jasmine": true,
    "es6": true
  },
  "rules": {
    "semi": ["error", "never"]
  }
}
